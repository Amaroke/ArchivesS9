<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="20.0"
   xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="projet.aos.frontendappvehicules.controllers.GestionDesVehiculesController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Label alignment="CENTER" prefWidth="200.0" text="Gestion des véhiules">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Label>
      <RadioButton fx:id="XML" contentDisplay="CENTER" mnemonicParsing="false"
         onAction="#onXMLClick" prefWidth="50.0" text="XML">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </RadioButton>
      <RadioButton fx:id="JSON" mnemonicParsing="false" onAction="#onJSONClick" prefWidth="100.0"
         text="JSON" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Button mnemonicParsing="false" onAction="#onAfficherVehiculesClick" prefWidth="200.0"
         text="Afficher tous les véhicules">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#onRechercherVehiculeClick" prefWidth="200.0"
         text="Rechercher un véhicule" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Button mnemonicParsing="false" onAction="#onAjouterVehiculeClick" prefWidth="200.0"
         text="Ajouter un véhicule">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#onModifierVehiculeClick" prefWidth="200.0"
         text="Modifier un véhicule" />
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <Button mnemonicParsing="false" onAction="#onSupprimerVehiculeClick" prefWidth="200.0"
         text="Supprimer un véhicule">
         <HBox.margin>
            <Insets right="20.0" />
         </HBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#onValiderReservationsClick" prefWidth="200.0"
         text="Valider des réservations" />
   </HBox>
</VBox>